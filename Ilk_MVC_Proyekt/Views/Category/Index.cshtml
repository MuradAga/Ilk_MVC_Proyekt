<table class="table table-hover table-dark">
    <thead>
        <tr>
            <th scope="col">Şəkil</th>
            <th scope="col">Name</th>
            <th scope="col">Update</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.Categories)
        {
            <tr>
                <td scope="row"><img src="@Url.Content(item.ImageUrl)" style="height: 80px; width: 80px; border-radius: 50%"/></td>
                <td>@item.CategoryName</td>
                <td><button onclick="location.href='@Url.Action("Update", "Category", new { id = item.CategoryId })'" class="btn btn-warning">Update</button></td>
                <td><button onclick="location.href='@Url.Action("DeleteCategory", "Category", new { id = item.CategoryId })'" class="btn btn-danger">Delete</button></td>
            </tr>
        }
    </tbody>
</table>